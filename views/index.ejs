<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
    integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

  <!-- Googe Font -->
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Questrial&display=swap" rel="stylesheet">


  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
    integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA=="
    crossorigin="anonymous" />

  <!-- Imports jQuery, helpers.js and app.js files -->
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/helpers.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>

</head>

<body>
  <%- include("partials/_header") %>
  <div class="main-background">
    <% if (!user) { %>
    <div class="jumbotron">
      <h1 class="display-4">Welcome to AppName</h1>
      <p class="lead">This is a webApp that can save your time</p>
    </div>
    <% } else { %>

    <!-- Smart Add Section -->
    <div class="smart-add">
      <div class="smart-add-box">
        <h2>Add New Item</h2>
        <form class="add-item" action="/add" method="POST">
          <textarea name="text" id="item-text" placeholder="Smart search">
            </textarea>
          <div class="submit-item">
            <button type="submit" class="new-item">Add</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Movies modal -->

    <!-- Movies modal end -->

    <!-- Restaurants modal -->
    <div class="modal fade" id="restaurantsModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-notify modal-warning" role="document">
        <!--Content-->
        <div class="modal-content">
          <!--Header-->
          <div class="modal-header text-center">
            <h4 class="modal-title white-text w-100 font-weight-bold py-2">Restaurants</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true" class="white-text">&times;</span>
            </button>
          </div>

          <!--Body-->
          <div class="modal-body">
            <form class="modalInput">
              <input type="hidden" id="item-id" name="item-id">
              <div class="md-form mb-5">
                <input type="text" class="item-name form-control validate form-control-lg" placeholder="Restaurant name" name="item-name">
              </div>
              <div class="md-form mb-5">
                <input type="text" class="form-control validate form-control-lg" value="Restaurants" placeholder="Category" name="category">
              </div>
            <!--Footer-->
            <div class="modal-footer justify-content-center">
              <button type="submit" class="modal-update-btn btn btn-flat btn-lg">Update</button>
            </div>
          </form>



          </div>
          <!--/.Content-->
        </div>
      </div>
    </div>

    <!-- Restaurants modal end -->
    <!-- Books modal -->
    <!-- Books modal end -->
    <!-- Products modal -->
    <!-- Products modal end -->

    <main class="main-categories">
      <div class="category-movies"></div>
      <div class="category-restaurants"></div>
      <div class="category-books"></div>
      <div class="category-products"></div>
    </main>
    <% } %>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
      integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
      integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
      crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"
      integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s"
      crossorigin="anonymous"></script>

  </div>
</body>

</html>
